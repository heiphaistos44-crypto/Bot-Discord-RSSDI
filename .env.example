# Configuration du Bot Discord
# Copie ce fichier vers .env et remplis les valeurs

# === OBLIGATOIRE ===
# Token du bot Discord (à récupérer sur https://discord.com/developers/applications)
DISCORD_TOKEN=your_bot_token_here

# === OPTIONNEL ===
# Préfixe des commandes (défaut: !)
COMMAND_PREFIX=!

# === BASE DE DONNÉES ===
# URL de la base de données (défaut: SQLite local)
DATABASE_URL=sqlite:///data/bot.db

# === INTERFACE WEB ===
# Clé secrète pour les sessions web
INTERFACE_SECRET=change-me-in-production

# Mot de passe admin de l'interface web
INTERFACE_PASSWORD=admin123

# Host et port de l'interface web
INTERFACE_HOST=127.0.0.1
INTERFACE_PORT=5000

# === WEBHOOKS DISCORD ===
# URL du webhook pour les logs d'erreurs (optionnel)
DISCORD_WEBHOOK_URL=

# ID du salon de logs (optionnel)
LOG_CHANNEL_ID=0

# === FONCTIONNALITÉS ===
# Activer/désactiver les modules (true/false)
ENABLE_RSS=true
ENABLE_ECONOMY=true
ENABLE_GAMES=true
ENABLE_AUTOMOD=true

# === LIMITES ===
# Nombre maximum d'avertissements avant ban automatique
MAX_WARNINGS=5

# XP maximum par message
MAX_XP_PER_MESSAGE=5

# Cooldown général en secondes
COOLDOWN_SECONDS=60

# === ÉCONOMIE ===
# Pièces données quotidiennement
DAILY_COINS=100

# Pièces min/max pour le travail
WORK_COINS_MIN=10
WORK_COINS_MAX=50